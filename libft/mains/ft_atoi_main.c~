#include <stdio.h>
#include <stdlib.h>

int	ft_atoi(const char *nptr)
{
	int	result;
	int	signo;

	result = 0;
	signo = 1;
	while (*nptr == ' ' || (*nptr >= 9 && *nptr <= 13))
		nptr++;
	if (*nptr == '-' || *nptr == '+')
	{
		if (*nptr == '-')
		{
			signo = -1 * signo;
			nptr++;
		}
	}
	while (*nptr >= '0' && *nptr <= '9')
	{	
		result = result * 10 + (*nptr - 48);
		nptr++;
	}
	return (signo * result);
}

int	main()
{
	printf("ft_atoi: %d\n", ft_atoi("-987"));
	printf("atoi: %d\n", atoi("-987"));
	return (0);
}
