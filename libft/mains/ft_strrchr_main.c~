#include <stdio.h>
#include <string.h>

char	*ft_strrchr(const char *s, int c)
{
	while (*(s + 1) != '\0')
		s++;
	while (*s)
	{
		if (*s != (char) c)
			s--;
		else
			return ((char *)s);
	}
	if (*s == (char) c)
		return ((char *) s);
	else
		return (NULL);
}

int	main()
{
	const char	*s;
	int	c;

	s = "pepito";
	c = '\0';
	printf("Con ft_strrchr: %s\n", ft_strrchr(s, c));
	printf("Con strrchr: %s\n", strrchr(s, c));
	return (0);
}

